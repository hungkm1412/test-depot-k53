<% provide(:title, "Edit product") %>
<h1>Edit product</h1>

<div class="row">
  <div class="span6 offset3">
  <%= form_for(@product) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :price %>
      <%= f.number_field :price %>

      <%= f.submit "Save", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
