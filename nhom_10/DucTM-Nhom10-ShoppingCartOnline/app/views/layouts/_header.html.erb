<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "shopping", root_path, id: "logo" %>
      <nav>
        <ul class="nav pull-right">
          <form class="navbar-search pull-left" action="/users/find" method="post">
            <input type="text" class="search-query" name="email" placeholder="Search">
          </form>
          <li><%= link_to "Home", root_path %></li>
          <li id="fat-menu" class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Shop <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "All Categories", categories_path %></li>
              <li><%= link_to "All Products", products_path %></li>
            </ul>
            </li>
            <li><%= link_to "Help", help_path %></li>
            <% if signed_in? %>
              <% if current_user.admin? %>
                <li><%= link_to "Users" , users_path  %></li>
              <% end %>
              <li><%= link_to "Cart" , '#' %></li>
              <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", current_user %></li>
                <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                <%= link_to "Sign out", signout_path, method: "delete" %>
                </li>
              </ul>
              </li>
            <% else %>
              <li><%= link_to "Sign in", signin_path %></li>
            <% end %>
          </ul>
          </nav>
        </div>
      </div>
      </header>
