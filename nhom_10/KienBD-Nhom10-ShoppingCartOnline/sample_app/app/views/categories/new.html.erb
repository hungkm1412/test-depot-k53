<% provide(:title, 'Add Category') %>
<h1>Sign up</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@category) do |f| %>

      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.submit "Create Category", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
