<% provide(:title, "Edit Product") %>
<h1>Update Product</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@product) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :price %>
    <%= f.text_field :price %>

    <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
  <% end %>

  </div>
</div>
