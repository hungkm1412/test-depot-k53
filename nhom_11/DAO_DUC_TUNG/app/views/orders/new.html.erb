<% provide(:title, 'Check out') -%>
<h1>Check out</h1>
<div class="row">
  <div class="span6 offset3">
    <h2>Current cart items:</h2>

    <table class="table table-bordered table-strip">
      <thead>
        <tr>
          <td>Product</td>
          <td>Price</td>
          <td>Quantity</td>
        </tr>
      </thead>
      <tbody>
        <% current_cart.items.each do |item| -%>
          <tr>
            <td><%= link_to item.product.name, item.product %></td>
            <td><%= item.product.price %></td>
            <td><%= item.quantity %></td>
          </tr>
        <% end -%>
      </tbody>
    </table>

    <p>Total: <%= current_cart.total_price %></p>

    <%= form_for(@order) do |f| %>
      <%= f.submit "Process checkout", class: "btn btn-primary btn-large" %>
    <% end -%>
  </div>
</div>
